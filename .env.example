# ================================================
# cwh-todolist 환경 변수 템플릿
# ================================================
# 사용법:
# 1. 이 파일을 .env로 복사: cp .env.example .env
# 2. .env 파일의 값들을 실제 값으로 수정
# 3. .env 파일은 절대 Git에 커밋하지 마세요!
# ================================================

# ================================================
# Database Configuration (데이터베이스 설정)
# ================================================

DATABASE_URL="postgresql://cwh_user:cwh_password@localhost:5432/cwh_todolist"

DB_HOST=localhost
DB_PORT=5432
DB_USER=cwh_user
DB_PASSWORD=cwh_password
DB_NAME=cwh_todolist

# ================================================
# Backend API Server (백엔드 API 서버)
# ================================================

API_PORT=3000
API_HOST=localhost
NODE_ENV=development

# ================================================
# JWT Authentication (JWT 인증)
# ================================================

# 프로덕션에서는 강력한 랜덤 키로 변경하세요!
# 생성 방법: openssl rand -base64 32
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

JWT_EXPIRES_IN=24h

# ================================================
# CORS Settings (CORS 설정)
# ================================================

CORS_ORIGIN=http://localhost:5173

# ================================================
# Frontend (프론트엔드)
# ================================================

VITE_API_URL=http://localhost:3000/api

# ================================================
# Prisma
# ================================================

PRISMA_STUDIO_PORT=5555

# ================================================
# Logging (로깅)
# ================================================

LOG_LEVEL=debug

# ================================================
# Security (보안)
# ================================================

BCRYPT_SALT_ROUNDS=10

# ================================================
# Rate Limiting (선택사항)
# ================================================

RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
