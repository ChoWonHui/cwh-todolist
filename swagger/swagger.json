          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "examples": {
              "unauthorized": {
                "summary": "인증 필요",
                "value": {
                  "success": false,
                  "error": {
                    "code": "UNAUTHORIZED",
                    "message": "유효한 인증 토큰이 필요합니다"
                  }
                }
              }
            }
          }
        }
      },
