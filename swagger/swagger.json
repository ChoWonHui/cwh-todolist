            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "examples": {
              "forbidden": {
                "summary": "권한 없음",
                "value": {
                  "success": false,
                  "error": {
                    "code": "FORBIDDEN",
                    "message": "이 할일에 접근할 권한이 없습니다"
                  }
                }
              }
            }
          }
        }
      },
      "NotFoundError": {
        "description": "리소스를 찾을 수 없음",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "examples": {
              "notFound": {
                "summary": "할일 없음",
                "value": {
                  "success": false,
                  "error": {
                    "code": "NOT_FOUND",
                    "message": "할일을 찾을 수 없습니다"
                  }
                }
              }
            }
          }
        }
      },
      "InternalServerError": {
        "description": "서버 내부 오류",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            },
            "examples": {
              "serverError": {
                "summary": "서버 오류",
                "value": {
                  "success": false,
                  "error": {
                    "code": "INTERNAL_ERROR",
                    "message": "일시적인 오류가 발생했습니다. 잠시 후 다시 시도해주세요"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
